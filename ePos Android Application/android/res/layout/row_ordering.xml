<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/list_selector"
    android:descendantFocusability="blocksDescendants"
    android:orientation="horizontal"
    android:padding="@dimen/text_padding_small" >

    <Button
        android:id="@+id/plus"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.5"
        android:drawableLeft="@drawable/ic_plus"
        android:textSize="@dimen/text_size_small"
        android:background="?android:attr/selectableItemBackground"
        android:textColor="@color/windowBackgroundColorSecondary" >
    </Button>

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/text_color_view" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:padding="@dimen/text_padding_small" >

        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/windowBackgroundColorSecondary" />

        <TextView
            android:id="@+id/price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/windowBackgroundColorSecondary" />

        <TextView
        	android:id="@+id/wait"
        	android:layout_width="match_parent"
        	android:layout_height="wrap_content"
        	android:visibility="gone"
        	android:text="@string/label_name_wait"
        	android:textColor="@color/windowBackgroundColorSecondary" />
    </LinearLayout>

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/text_color_view" />

    <Button
        android:id="@+id/minus"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.5"
        android:drawableRight="@drawable/ic_minus"
        android:textSize="@dimen/text_size_small"
        android:background="?android:attr/selectableItemBackground"
        android:textColor="@color/windowBackgroundColorSecondary" >
    </Button>

</LinearLayout>
